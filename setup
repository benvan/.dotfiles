#!/bin/bash
DIR="$( cd "$( dirname "$0" )" && pwd )"

permission(){
  if [[ -e $1 ]]; then
    echo -n "$1 already exits. Replace? [y/n] "
    read -s -n 1 key
    if [[ "$key" == "y" ]]; then
      echo OK
      return 0
    else
      echo skipping
      return 1
    fi
  fi
  return 0
}

for f in `ls $DIR | grep -Ev "setup|\.git\.dotrc"`; do
  permission "$HOME/.$f" && ln -sf "$DIR/$f" "$HOME/.$f" 
done

permission "$HOME/.$f" && ln -sf "dotrc/location" "$HOME/.dotrc"

mkdir "$HOME/.scripts/data"
