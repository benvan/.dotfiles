Config { font = "xft:Sans-7"
       , bgColor = "transparent"
       , fgColor = "grey"
       , position = Static { xpos = 1920, ypos = 0, width = 1920, height = 22 }
       , lowerOnStart = True
       , commands = [ Run StdinReader
                    , Run Com "$HOME/.scripts/getVolume" [] "myVolume" 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% / %memory%   |   %myVolume%   |   <fc=#ee9a00>%date%</fc>"
}
